{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/check-answer",
      "methods": ["POST"],
      "dest": "/api/check-password.js"
    },
    {
      "src": "/success",
      "dest": "/public/success.html"
    },
    {
      "src": "/download/treasure.txt",
      "dest": "/public/treasure.txt"
    }
  ]
}
